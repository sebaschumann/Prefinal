<p id="notice"><%= notice %></p>

<h1>Movements</h1>

<select name="account_id">
    <option value="">Seleccione cuenta</option>
    <% Account.all.each do | d | %>
      <option value="<%= d.id %>"><%= d.name %></option>
    <% end %>
  </select>
  <input type="submit" />

<table>
  <thead>
    <tr>
      <th>Account</th>
      <th>Movement date</th>
        <th><%= link_to "Description", movements_path(:sort => true, :by => "Description", :order => (params[:order] == "asc" ? "desc" : "asc")) %></th>
      <th>Movement type</th>
      <th><%= link_to "Amount", movements_path(:sort => true, :by => "Amount", :order => (params[:order] == "asc" ? "desc" : "asc")) %></th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movements.each do |movement| %>
      <tr>
          <td><%= movement.account.name %></td>
        <td><%= movement.movement_date %></td>
          <td><%= movement.description %></td>
        <td><%= movement.tipo %></td>
        <td><%= movement.amount %></td>

        <td><%= link_to 'Show', movement %></td>
        <td><%= link_to 'Edit', edit_movement_path(movement) %></td>
        <td><%= link_to 'Destroy', movement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @movements %>
<br>

<%= link_to 'New Movement', new_movement_path %>
